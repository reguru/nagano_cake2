<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <div class="page-title mt-5">
        <h4>マイページ</h4>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-2">
      <h5>登録情報</h5>
    </div>

    <div class="col-lg-3">
      <%= link_to "編集する", customers_information_edit_path, class: 'btn btn-success' %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-8">
      <table class="table table-bordered">
        <tr>
          <th style="width: 30%">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-2">
      <h5>配送先</h5>
    </div>

    <div class="col-lg-3">
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-lg-2">
      <h5>注文履歴</h5>
    </div>

    <div class="col-lg-3">
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
    </div>
  </div>

</div>