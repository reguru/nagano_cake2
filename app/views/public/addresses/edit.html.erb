<div class="container">
  <div class="row">
    <div class="col-lg-10">
      <div class="page-title mt-5">
        <h4>配送先編集</h4>
      </div>
    </div>
  </div>

  <%= form_with model: @address do |f| %>
    <div class="row">
      <div class="col-lg-3">
        <p>郵便番号(ハイフンなし)</p>
      </div>
      <div class="col-lg-5">
        <%= f.text_field :postal_code %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3">
        <p>住所</p>
      </div>
      <div class="col-lg-5">
        <%= f.text_field :address, :size => '60' %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-3">
        <p>宛名</p>
      </div>
      <div class="col-lg-5">
        <%= f.text_field :name %>
      </div>
      <div class="col-lg-3">
        <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>