<div class="container">
  <div class="row mt-5">
    <div class="col-lg-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>

    <div class="col-lg-4">
      <%= image_tag @item.get_image, class: 'item-image' %>
    </div>

    <div class="col-lg-6">
      <h3><string><%= @item.name %></string></h3>
      <h4 class="mt-3"><%= @item.introduction %></h4>
      <h4 class="mt-5">¥<%= @item.with_tax_price %><span class="h6">(税込)</span></h4>

      <%= form_with model: @cart_item, url: cart_items_path do |f| %>
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class="form-inline mt-3">
          <div class="mr-3">
            <%= f.select :amount, *[1..10], placeholder: '個数選択' %>
          </div>
          <div>
            <%= f.submit 'カートに入れる', class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div style="height:300px"></div>
</div>