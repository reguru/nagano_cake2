<div class="container">
  <div class="page-title">
    <h4>ジャンル編集</h4>
  </div>

  <%= form_with model: @genre, url: admin_genre_path do |f| %>
    <div class="row mt-5">
      <div class="col-lg-2">
        <h5>ジャンル名</h5>
      </div>

      <div class="col-lg-3">
        <%= f.text_field :name %>
      </div>

      <div class="col-lg-3">
        <%= f.submit "変更を保存", class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
  
  <div style="height:400px"></div>
</div>