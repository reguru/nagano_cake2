<div class="container">
  <div class="page-title">
    <h5>ジャンル一覧・追加</h5>
  </div>

  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row">
      <div class="col-2 genre-name">
        ジャンル一覧
      </div>
      <div class="col-3">
        <%= f.text_field :name, placeholder: 'ジャンル名' %>
      </div>
      <div class="col-2">
        <%= f.submit '新規登録', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <table class="table mt-5 col-5">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to '編集する', edit_admin_genre_path(genre), class: 'btn btn-success' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>