<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="page-title">
        <h4>商品一覧</h4>
      </div>
    </div>
    <div class="col-lg-7">
      <p class="admin-new">
        <%= link_to new_admin_item_path do %>
          <i class="fa-solid fa-plus text-dark"></i>
        <% end %>
      </p>
    </div>
  </div>

  <table class="table table-borderless">
    <thead class="thead-light">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item), class: 'text-dark' do %>
              <p><%= item.name %></p>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active %>
              <p>販売中</p>
            <% else %>
              <p>販売停止中</p>
            <% end %>
          </td>
        </tr>

      <% end %>
    </tbody>
  </table>
</div>