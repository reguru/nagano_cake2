<div class="container">
  <div class="page-title">
    <h4>商品一覧</h4>
    <span><%= link_to "新規", new_admin_item_path %></span>
  </div>

  <table class="table table-borderless">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <%= link_to admin_item_path(item) do %>
              <%= item.name %>
            <% end %>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>

      <% end %>
    </tbody>
  </table>


</div>